<!DOCTYPE html>
<html>
<head>
  <title>Bookmarkr</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
  <%= javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="navbar-header">
          <%= link_to 'Bookmarkr', root_path, class: 'navbar-brand' %>
        </div>

        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-chevron-down"></span> Categories
            </a>
            <ul class="dropdown-menu" role="menu">
              <% Bookmark::CATEGORIES.each do |category| %>
                <li><%= link_to category, bookmarks_path(category: category) %></li>
              <% end %>
            </ul>
          </li>
          <li>
            <%= link_to new_bookmark_path do %>
              <span class="glyphicon glyphicon-plus"></span> New Bookmark
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <% flash.each do |type, message| %>
        <div class="alert alert-<%= type %> alert-dismissible">
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
          </button>
          <%= message %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
